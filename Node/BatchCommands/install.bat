echo install express node.js web app framework
call npm install express --save;

echo body-parser - This is a node.js middleware for handling 
echo JSON, Raw, Text and URL encoded form data.
call npm install body-parser --save;

echo cookie-parser - Parse Cookie header and populate req.cookies 
echo with an object keyed by the cookie names.
call npm install cookie-parser --save;

echo multer - This is a node.js middleware for handling multipart/form-data.
call npm install multer --save;